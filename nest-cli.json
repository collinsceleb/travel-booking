{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/flight-bookings/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/flight-bookings/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/flight-bookings",
  "projects": {
    "hotel-reservations": {
      "type": "application",
      "root": "apps/hotel-reservations",
      "entryFile": "main",
      "sourceRoot": "apps/hotel-reservations/src",
      "compilerOptions": {
        "tsConfigPath": "apps/hotel-reservations/tsconfig.app.json"
      }
    },
    "users": {
      "type": "application",
      "root": "apps/users",
      "entryFile": "main",
      "sourceRoot": "apps/users/src",
      "compilerOptions": {
        "tsConfigPath": "apps/users/tsconfig.app.json"
      }
    },
    "flight-bookings": {
      "type": "application",
      "root": "apps/flight-bookings",
      "entryFile": "main",
      "sourceRoot": "apps/flight-bookings/src",
      "compilerOptions": {
        "tsConfigPath": "apps/flight-bookings/tsconfig.app.json"
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    }
  }
}